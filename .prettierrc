{
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "options": {
        "singleQuote": true,
        "tabWidth": 2,
        "arrowParens": "always",
        "trailingComma": "all",
        "bracketSpacing": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
